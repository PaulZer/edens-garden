{% block body %}
    <div class="container mx-auto">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.latinName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.waterFrequency, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.plantFamily, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.plantingDateIntervals, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="text-right">
            {{ form_row(form.save, {'attr': {'class': 'btn btn-success'}}) }}
        </div>

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
{% endblock %}