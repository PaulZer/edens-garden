{% block body %}
    <div class="container mx-auto">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_row(form.plant, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.fertilizer, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.efficiency, {'attr': {'class': 'form-control', 'autofocus': true}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.nbDayBeforeFertilizing, {'attr': {'class': 'form-control is-valid'}}) }}
        </div>

        <div class="text-right">
            {{ form_row(form.save, {'attr': {'class': 'btn btn-success'}}) }}
        </div>

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
{% endblock %}