{% extends 'base.html.twig' %}

{% block title %}Gardens{% endblock %}
{% block body %}
    hello {{ app.user.firstName }}
    <table border="1px">
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Height</th>
    <th>Length</th>
        {% for garden in gardens %}
            <tr>
                <td><a href='/garden/{{garden.id}}'>{{garden.name}}</a></td>
                <td>{{garden.latitude}}</td>
                <td>{{garden.longitude}}</td>
                <td>{{garden.height}}</td>
                <td>{{garden.length}}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}