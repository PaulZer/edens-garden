{% set _route = app.request.attributes.get('_route') %}
<div id="modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modalTitle }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if _route == 'garden_edit' or _route == 'garden_create' %}
                    {% include template ~ '.html.twig' with {'formGarden': view} %}
                {% elseif _route == 'plot' %}
                    {% include 'garden/plot.html.twig' with {'plot': plot} %}
                {% elseif _route == 'garden' %}
                    {% include template ~ '.html.twig' with { } %}
                {% endif %}
            </div>
        </div>
    </div>
</div>