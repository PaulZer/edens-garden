
<form method="post" action="{{ path('login') }}" id="loginForm" class="form px-4 py-2">

    <h2 class="">Please sign in</h2>

    <div class="form-group">
        <label for="_username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
    </div>

    <div class="form-group">
        <label for="_password">Mot de passe</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="form-group">
        <button class="btn btn-primary" type="submit">
            Sign in
        </button>
    </div>

    {% if error %}
        <div class="alert alert-danger" style="margin-top: 1em;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>
